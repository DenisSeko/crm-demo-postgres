[build]
  command = "npm run build"
  publish = "dist"

[build.environment]
  NODE_VERSION = "18"

# Vue Router SPA support
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200

# API proxy to Railway backend
[[redirects]]
  from = "/api/*"
  to = "https://crm-staging-app.up.railway.app/api/:splat"
  status = 200
  force = true